script(type='text/javascript' src='http://127.0.0.1:3000/javascripts/jquery-2.1.0.min.js')
script(type='text/javascript' src='http://127.0.0.1:3000/javascripts/observer.js')

form(name='form')
  h4 {{question.question}}
  br

  div
    li(ng-repeat='choice in question.choices')
      span.badge.coll-xs-3(id='{{choice.id}}') {{choice.counter}}
      &nbsp;
      a(href='' ng-click='choose(choice.id)') {{choice.value}}

  div.pull-right
    a.btn.btn-default.btn-sm(href='#/') К опросам
